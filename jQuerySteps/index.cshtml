            console.log("save addressId", spright.page.addressId);
            var payload = {
                AddressId: spright.page.addressId,
                DealerId: spright.page.dealerId
            }
            spright.services.UpgradeDealer.onAddressCreateSuccess(payload, spright.page.handlers.onDealerAddressSuccess, spright.page.AjaxError);
            console.log("2 ids", payload);
        }

        spright.page.handlers.onDealerAddressSuccess = function (data, status, xhr) {
            console.log("DealerAddressSuccess");
        }
        spright.page.handlers.onCatCreateSuccess = function (data, status, xhr) {
            spright.page.catId = data.item;
            console.log("save catId", spright.page.catId);
            var payload = {
                CatId: spright.page.catId,
                DealerId: spright.page.dealerId
            }
            spright.services.UpgradeDealer.onCatCreateSuccess(payload, spright.page.AjaxSuccess, spright.page.AjaxError);

        }

        spright.page.handlers.onVehicleCreateSuccess = function (data) {
            spright.page.vehicleId = data.item;
            var payload = {
                VehicleId: spright.page.vehicleId,
                DealerId: spright.page.dealerId
            }
            spright.services.UpgradeDealer.onVehicleCreateSuccess(payload, spright.page.AjaxSuccess, spright.page.AjaxError);
            console.log("save vehicleId", spright.page.vehicleId, spright.page.dealerId);
        }
        spright.page.AjaxSuccess = function (data, status, xhr) {
            console.log("ajax success creating messages")



